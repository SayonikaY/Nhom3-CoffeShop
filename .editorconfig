[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# =====================================
# Documentation files
# =====================================

[*.adoc]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 4

# =====================================
# Project source code
# =====================================

[*.java]
indent_style = space
indent_size = 4

[*.{kt,kts}]
indent_style = space
indent_size = 4

[*.sql]
indent_style = space
indent_size = 4
